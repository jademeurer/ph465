import numpy as np
import matplotlib.pyplot as plt
import time


def shouldshow(iteration,size,numiter,plotfreq):
# This function returns True or False, depending on if a particular iteration
# of the plotRandomNoise function is a good time to update the plot.
# The iteration argument is the loop variable from the main plotRandomNoise 
# function. The size argument is the size of the array being generated by
# plotRandomNoise. The numiter argument is the total number of trials
# plotRandomNoise will produce. The plotfreq argument is whatever the user
# preference for plotting was set to in the plotRandomNoise function.
# This might be more complicated than you need for your purposes.
    if plotfreq is 1:
    # If user wants every fram plotted, always return true.
        return True
    if plotfreq == 0 or plotfreq == False:
    # If user wants nothing plotted, always return false.
        return False
    if plotfreq is True:
    # User wants a plot, but doesn't specify how often to update, then
    # figure out a good framerate ourself.
        if iteration>=numiter-1:
            return True # If it's the last frame, always display it.
        if numiter < 100:
            showevery = 1 # If there aren't many frames, show all of them
        elif numiter < 500:
            showevery = 2 # If there are a medium number of frames, show every-other one.
        else:
            showevery = size*size # If lots of frames, show every (size*size)th one.
        return iteration % showevery == 0 # Use modulo to determine if we're on one of those frames.
    if plotfreq > 0: # If user specifies framerate, do as they ask.
        return iteration % plotfreq == 0 # Use modulo to determine if we're on one of those frames.

    
    
def plotRandomNoise(size,numtrials,plotfreq=True):
# A function to display a size-by-size array of random noise, updated numtrials times.
    s=calc()   
    
    if plotfreq < 0:
        plotfreq=False
    if plotfreq: # Make a plot if the user wants plotting.
        fig = plt.figure()
        ax = fig.add_axes([0.1, 0.1, 0.8, 0.8]) 
        cax = ax.matshow(s)
        
    for i in range(0,numtrials): # Loop through number of iterations user wants
        s=calc() # replace array
        if shouldshow(i,size,numtrials,plotfreq): # update plot if necessary
            time.sleep(0) # if you want to pause between frames, set a delay here
            cax.set_data(s)
            ax.set_title("Iteration {}".format(i),fontsize=18)
            fig.canvas.draw()
    return s # return the last array generated

