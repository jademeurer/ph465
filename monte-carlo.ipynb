t=2.27



def deltaU(i,j):
    if i==0:
        top=sarray[size-1,j] 
    else:
        top=sarray[i-1,j]
    if i==(size-1):
        bottom=sarray[0,j]
    else:
        bottom=sarray[i+1,j]
    if j==0:
        left=sarray[i,size-1]
    else:
        left=sarray[i, j-1]
    if j==(size-1):
        right=sarray[i,0]
    else:
        right=sarray[i,j+1]
    ediff=2*sarray[i,j]*(top+bottom+left+right)
    return ediff


def calc():
    for i in range(100*size**2):
        x=np.random.randint(size)
        y=np.random.randint(size)
        ediff = deltaU(x,y)
        if (ediff <= 0 or np.random.random() < exp(-ediff/t)):
            sarray[x,y] = -sarray[x,y]
    return sarray

